{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",               // Output directory for compiled files
    "rootDir": "./src",               // Root directory for input files
    "strict": true,                   // Enable all strict type-checking options
    "esModuleInterop": true,          // Allow default imports from CommonJS modules
    "skipLibCheck": true,             // Skip type checking for declaration files
    "declaration": true,              // Generate declaration files (.d.ts)
    "declarationMap": true,           // Generate .d.ts.map files for debugging
    "sourceMap": true                 // Generate source maps alongside .js files
  },
  "include": ["src"],                 // Include source files
  "exclude": ["node_modules", "dist", "**/*.test.ts"]  // Exclude test and output files
}
